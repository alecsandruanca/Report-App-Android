<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/image_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_titlu"
        android:layout_marginStart="22dp"
        android:maxHeight="42dp"
        android:maxWidth="42dp"
        android:scaleType="fitXY"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_titlu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/image_report"
        android:layout_marginTop="12dp"
        android:text="TextView"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_dataAdaugare"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tv_titlu"
        android:layout_toEndOf="@+id/image_report"
        android:background="@android:color/darker_gray"
        android:text="TextView"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_dataAdaugare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_location"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/image_report"
        android:text="TextView" />

    <TextView
        android:id="@+id/tv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image_report"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/image_report"
        android:text="TextView" />

    <TextView
        android:id="@+id/tv_department"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/image_report"
        android:layout_below="@+id/image_report"
        android:text="TextView" />
</RelativeLayout>
